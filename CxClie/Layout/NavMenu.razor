@using CxClie.Services

@inject AppState _appState
@inject NavigationManager _navManager
@inject IFrontendLoginService _loginService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Gx-Ventes</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <!-- HOME -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2"></i> Home
            </NavLink>
        </div>

        <!-- GX HOME -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="homesetup">
                <i class="bi bi-houses-fill me-2"></i> Gx-Home
            </NavLink>
        </div>

        <!-- CLIENTS -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="ToggleSubClient">
                <i class="bi bi-people-fill me-2"></i> Clients
            </NavLink>

            @if (isSubClientVisible)
            {
                <nav class="nav flex-column ms-3">

                    <NavLink class="nav-link nav-sub" href="ordermanage">
                        <i class="bi bi-bag-check-fill me-2"></i> Commandes
                    </NavLink>

                    @if (_appState.IsAuthenticated("CustApi"))
                    {
                        <NavLink class="nav-link nav-sub" href="clieaccess?orig=3">
                            <i class="bi bi-box-arrow-in-down me-2"></i> Install
                        </NavLink>

                        <NavLink class="nav-link nav-sub" @onclick="() => CustLogout()">
                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                        </NavLink>
                    }

                    <NavLink class="nav-link nav-sub" href="clieaccess?orig=1">
                        <i class="bi bi-box-arrow-in-left me-2"></i> Login
                    </NavLink>

                    <NavLink class="nav-link nav-sub" href="clieaccess?orig=2">
                        <i class="bi bi-person-plus-fill me-2"></i> Register
                    </NavLink>

                </nav>
            }
        </div>

        <!-- SUPPRESSION -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="orgadelete">
                <i class="bi bi-trash-fill me-2"></i> Suppression
            </NavLink>
        </div>

        <!-- SUPPORT -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="support">
                <i class="bi bi-headset me-2"></i> Support
            </NavLink>
        </div>

        <!-- COUNTER -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <i class="bi bi-plus-square-fill me-2"></i> Counter
            </NavLink>
        </div>

        <!-- WEATHER -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <i class="bi bi-cloud-sun-fill me-2"></i> Weather
            </NavLink>
        </div>

        <!-- AUTH VALUE -->
        <div class="nav-item px-3 fw-bold text-bg-light">
            <span>VerifValue : @authValue</span>
        </div>
    </nav>

    <button type="button" @onclick="GetAuthen">VerifAuthentication</button>
</div>

<style>
    .nav-link.active {
        background-color: #0d6efd !important; /* Bootstrap primary blue */
        color: white !important;
        border-radius: 4px;
    }

    .nav-sub.nav-link.active {
        background-color: #0b5ed7 !important; /* darker blue for sub-items */
    }

</style>
@code {
    private bool collapseNavMenu = true;
    private bool isSubManagVisible = false;
    private bool isSubClientVisible = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private string authValue="";
    protected override void OnParametersSet()
    {
        bool siauth = _appState.IsAuthenticated("CustApi");
        Console.WriteLine($"NavMenu OnParametersSet - CustApi Authenticated: {siauth}");
        authValue = "vide";
        if (siauth) authValue = "estbon";
    }
    private void GetAuthen()
    {
        bool siauth = _appState.IsAuthenticated("CustApi");
        authValue = "vide";
        if (siauth) authValue = "estbon";
    }
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    private void ToggleSubManag()
    {
        isSubManagVisible = !isSubManagVisible;
    }
    private void ToggleSubClient()
    {
        isSubClientVisible = !isSubClientVisible;
    }
    private void CustLogout()
    {
        _loginService.CustLogout();
        _navManager.NavigateTo("/");
    }
}
