@inherits LayoutComponentBase

@using System.Security.Claims

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="d-flex align-items-center justify-content-between bg-light px-3 py-2">
            <div class="d-flex align-items-center gap-3">
                <AuthorizeView Roles="Support">
                    <Authorized>
                        <a href="gxlogout" class="text-decoration-none">
                            <span class="bi bi-door-closed-fill"></span> Logout GX
                        </a>
                    </Authorized>

                    <NotAuthorized>
                        <a href="gxregister" class="text-decoration-none">
                            <span class="bi bi-door-closed-fill"></span> Register GX
                        </a>

                        <a href="gxlogin" class="text-decoration-none">
                            <span class="bi bi-door-closed-fill"></span> Login GX
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>

            <div class="d-flex align-items-center">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
        </div>


        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
